{% extends 'base.html.twig' %}

{% block title %}Gestion du site{% endblock %}

{% block body %}

    <div class="row mt-5">
        <div class="col-lg-2 ml-3">
            <div class="list-group pl-4" id="list-tab" role="tablist">
                <h5 class="text-center"><i class="fas fa-users-cog fa-xl pr-2"></i>ADMINISTRATION</h5>
                <a class="list-group-item list-group-item-action active" id="list-users-list" data-toggle="list" href="#list-users" role="tab" aria-controls="home"><i class="fas fa-users pr-2 pb-1"></i>Utilisateurs</a>
                <a class="list-group-item list-group-item-action" id="list-events-list" data-toggle="list" href="#list-events" role="tab" aria-controls="profile"><i class="far fa-calendar-alt pr-3 pb-1"></i>Sessions</a>
                <a class="list-group-item list-group-item-action" id="list-registered-list" data-toggle="list" href="#list-registered" role="tab" aria-controls="messages"><i class="fas fa-user-check pr-2"></i>Inscriptions</a>
                <a class="list-group-item list-group-item-action" id="list-events_type-list" data-toggle="list" href="#list-events_type" role="tab" aria-controls="messages"><i class="far fa-address-book pr-3"></i>Événements</a>
                <div><br></div>

            </div>
            <div class="container text-center mb-4"><a href="{{ path('home') }}" class="btn btn-outline-dark mt-3">Retour à l'accueil</a></div>
        </div>

        <div class="col-lg-9 ml-5">
            <div class="tab-content" id="nav-tabContent">

                <div class="tab-pane fade show active" id="list-users" role="tabpanel" aria-labelledby="list-users-list">
                    {{ include('admin/user/index.html.twig') }}
                </div><!--END users-list-->

                <div class="tab-pane fade" id="list-events" role="tabpanel" aria-labelledby="list-events-list">
                    {{ include('admin/event/index.html.twig') }}
                </div><!--END events-list-->

                <div class="tab-pane fade" id="list-events_type" role="tabpanel" aria-labelledby="list-events_type-list">
                    {{ include('admin/events_type/index.html.twig') }}
                </div><!--END events-type-->

                <div class="tab-pane fade" id="list-registered" role="tabpanel" aria-labelledby="list-registered-list">
                    {{ include('admin/users_registered/index.html.twig') }}
                </div><!--END users-registered-->

            </div>
        </div>
    </div>
{% endblock %}


