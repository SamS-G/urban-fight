{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.username) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.firstname) }}
        <h5 class="text-center">Adresse :</h5>
        {{ form_row(form.street) }}
        {{ form_row(form.zip_code) }}
        {{ form_row(form.city) }}
        {{ form_row(form.isVerified) }}
        <div class="container-fluid text-center mb-2">
            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i>Enregistrer les modifications</button>
            <a class="btn btn-primary" href="{{ path('admin_index') }}" role="button">Retour</a>
        </div>
        {{ form_end(form) }}
{% endblock %}

