{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <h2 class="text-center pb-3 mt-3">Participation à un événement</h2>

    <div id="user_registration" class="container col-lg-3 mt-3 mb-3 ">
        <h5 class="text-center ">Session sélectionné : </h5>
        {{ form_start(form) }}

        {{ form_row(form.date_start) }}

        {{ form_row(form.date_end) }}

        {{ form_row(form.location) }}

        {{ form_row(form.available_places) }}

        {{ form_row(form.event_type) }}

        <div class="container text-center">
            <hr class="mt-4 mb-4" style="border: 0; height: 1px; background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0))">
            <h5>Mes infos personnelles: </h5>
            <small id="passwordHelpBlock" class="form-text text-muted">Si vos coordonnées sont fausses modifiez-les sur votre profil <a class="badge badge-success" href="{{ path('user_profile') }}">ici</a></small>
        </div>

        {{ form_row(form.lastname, {
            'attr' : {
                'placeholder' : app.user.lastname
            }
        }) }}
        {{ form_row(form.firstname, {
            'attr' : {
                'placeholder' : app.user.firstname
            }
        }) }}
        {{ form_row(form.email, {
            'attr' : {
                'placeholder' : app.user.email
            }
        }) }}

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-check" aria-hidden="true"></i>Inscription</button>
            <a class="btn btn-primary btn-sm" href="{{ path('calendar') }}" role="button">Retour</a>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}


